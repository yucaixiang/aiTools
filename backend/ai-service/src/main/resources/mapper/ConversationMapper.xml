<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toolrecommend.ai.mapper.ConversationMapper">

    <!-- 根据会话ID查询对话历史 -->
    <select id="selectBySessionId" resultType="com.toolrecommend.common.entity.Conversation">
        SELECT *
        FROM conversation
        WHERE session_id = #{sessionId}
        ORDER BY created_at ASC
    </select>

    <!-- 查询用户最近的会话 -->
    <select id="selectRecentByUserId" resultType="com.toolrecommend.common.entity.Conversation">
        SELECT *
        FROM conversation
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
        LIMIT #{limit}
    </select>

    <!-- 删除会话历史 -->
    <delete id="deleteBySessionId">
        DELETE FROM conversation
        WHERE session_id = #{sessionId}
    </delete>

</mapper>
